{{> header}}

<h1> {{ viewTitle }} </h1>

<form action="/brand" method="post">
    <input type="hidden", name="_id", value="{{brand._id}}">
    <div class="form-group">
        Brand name
        <input type="text", name="name", value="{{brand.name}}" required>
    </div>
    <div class="form-group">
        Description
        <input type="text", name="description", value="{{brand.description}}" required>
    </div>
    <div class="form-class">
        <button type="submit">Save</button>
    </div>
</form>